<?xml version="1.0" encoding="utf-8" standalone="no"?>
<installer-gui-script minSpecVersion="1">
    <script>
        <![CDATA[
        function install_only_if_older_than(os_version)
        {
            system.log("required_only_if_older_than(" + os_version + ")");
            if (!my.target || !my.target.systemVersion)
                return true;
            var version = my.target.systemVersion.ProductVersion;
            system.log("my.target.systemVersion = " + version);
            var compare_result = system.compareVersions(version, os_version);
            var do_install = compare_result < 0;
            system.log("required_only_if_older_than(" + os_version + "): comparison: " + compare_result + ", install: " + do_install);
            return do_install;
        }
        ]]>
    </script>
    <title>OS X Driver for QEMU&apos;s USB Tablet device</title>
    <welcome file="Welcome.rtf"/>
    <license file="License.rtf"/>

    <pkg-ref id="eu.philjordan.driver.QemuUSBTabletHIDEventDriver"/>
    <pkg-ref id="eu.philjordan.driver.QemuUSBTablet"/>
    <pkg-ref id="eu.dennis-jordan.driver.QemuUSBTablet-10.11"/>
    <choices-outline>
        <line choice="default">
            <line choice="eu.philjordan.driver.QemuUSBTabletHIDEventDriver"/>
            <line choice="eu.philjordan.driver.QemuUSBTablet"/>
            <line choice="eu.dennis-jordan.driver.QemuUSBTablet-10.11"/>
        </line>
    </choices-outline>
    <choice id="default"/>
    <choice id="eu.philjordan.driver.QemuUSBTabletHIDEventDriver" visible="false" enabled="install_only_if_older_than('10.9')" selected="install_only_if_older_than('10.9')">
        <pkg-ref id="eu.philjordan.driver.QemuUSBTabletHIDEventDriver"/>
    </choice>
    <pkg-ref id="eu.philjordan.driver.QemuUSBTabletHIDEventDriver" version="1.0.1" onConclusion="none">QemuUSBTablet.pkg</pkg-ref>
    <choice id="eu.philjordan.driver.QemuUSBTablet" visible="false" enabled="install_only_if_older_than('10.11')" selected="install_only_if_older_than('10.11')">
        <pkg-ref id="eu.philjordan.driver.QemuUSBTablet"/>
    </choice>
    <pkg-ref id="eu.philjordan.driver.QemuUSBTablet" version="1.1.1" onConclusion="none">QemuUSBTabletUSBDriver.pkg</pkg-ref>
    <choice id="eu.dennis-jordan.driver.QemuUSBTablet-10.11" visible="false">
        <pkg-ref id="eu.dennis-jordan.driver.QemuUSBTablet-10.11"/>
    </choice>
    <pkg-ref id="eu.dennis-jordan.driver.QemuUSBTablet-10.11" version="1.2" onConclusion="none">QemuUSBTablet1011.pkg</pkg-ref>
</installer-gui-script>